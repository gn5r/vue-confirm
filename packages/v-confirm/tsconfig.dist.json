{
  "extends": "./tsconfig.json",
  "exclude": ["vite.*", "vitest.*", "dev", "**/__tests__"],
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./lib",
    "stripInternal": true
  }
}
