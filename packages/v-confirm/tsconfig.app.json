{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "moduleResolution": "node",
    "types": [
      "node",
      "shelljs"
    ],
    "outDir": "dist",
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"]
}
